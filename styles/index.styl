blueColor = #0792D6 

border-box()
  -webkit-box-sizing: border-box
  -moz-box-sizing: border-box
  box-sizing: border-box
  
ul
	padding: 0px 

html,body 
	background-color: black
	font-family: 'Montserrat', sans-serif;
	color: white 
	width: 100% 
	height: 100% 
	overflow: hidden
	body
		padding: 20px 60px 60px 60px
		-moz-box-sizing: border-box;
		box-sizing: border-box
		cursor: none !important

	header 
		width: 100% 
		height: 97px
		padding: 0px 0px 0px 0px 
		margin: 0px 0px 35px 0px 
		border-bottom: 3px solid white
		position:relative 

	h1
		font-weight: bold
		color: white 
		font-size: 65px 
		margin: 0px 
		padding: 0px
 
	.current-time 
		position: absolute 
		right: 0px
		top: -10px
		font-size: 40px

	.current-date
		position: absolute
		right: 0px
		bottom: -20px
		font-size: 30px
		float:right

	#content 
		width: 	100%
		max-height: 2000px
		overflow: hidden
		margin: 0px
		padding: 0px
		cursor: none 


		.col
			width: 33.33%
			height: 660px 
			float:left
			margin: 0px
			padding: 0px

			h2
				font-weight: 400
				font-size: 18px 
				text-transform: uppercase 
	.show_container
		min-height: 80px 
		margin-bottom: 20px 

	.show
		font-size: 30px 
		margin:0px
		padding: 10px 0px 
		width: 90%
		font-weight: 200

	.times 
		margin: 0px
		padding: 0px
		max-width: 400px
		.time
			font-size: 26px 
			color: #9e9e9e
			text-decoration: line-through
		.active 
			color: white 
			text-decoration: none

.red 
	color: #d93d20
