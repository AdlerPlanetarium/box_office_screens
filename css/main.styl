*
  box-sizing: border-box
  cursor: none !important

html, body
  background: black
  color: white
  font-family: "Montserrat", sans-serif
  height: 100vh
  overflow: hidden
  width: 100%

body
  padding: 20px 60px 0 60px

header
  border-bottom: 3px solid white
  height: 97px
  margin: 0 0 35px 0
  padding: 0
  position: relative
  width: 100%

ul
  padding: 0

h1
  color: white
  font-size: 65px
  margin: 0
  padding: 0

#content
  margin: 0
  overflow: hidden
  padding: 0
  width: 100%

  .col
    float: left
    height: 660px
    margin: 0
    padding: 0
    width: 33.33%

    h2
      font-size: 18px
      font-weight: 400
      text-transform: uppercase

  .show-container
    margin-bottom: 20px
    min-height: 80px

.show
  font-size: 38px
  font-weight: 200
  line-height: 40px
  margin: 0
  padding: 0 0 10px 0
  width: 90%

.times
  margin: 0
  max-width: 400px

  .time
    color: #9e9e9e
    font-size: 26px
    line-height: 32px
    text-decoration: line-through

  .active
    color: white
    text-decoration: none

.blue
  color: #00aab5
.green
  color: #ffcc00
.purple
  color: #92c200
.red
  color: #d93d20

.premier
  background-color: #d93d20
  border-radius: 3px
  color: white
  font-size: 14px
  height: 30px
  line-height: 30px
  text-align: center
  text-transform: uppercase
  width: 135px
